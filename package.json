{
  "name": "@cpdevtools/development-host",
  "version": "0.4.7",
  "repository": "https://github.com/cpdevtools/development-host",
  "typings": "index.d.ts",
  "main": "index.js",
  "bin": {
    "devhost": "cli/bin/devhost.js"
  },
  "scripts": {
    "prepare": "run-s prepare:* && husky install",
    "prepare:husky": "husky install",
    "prepare:link-util": "pnpm link --global @cpdevtools/lib-node-utilities",
    "prepare:build": "pnpm run build",
    "prepare:link": "cd ./dist/main && pnpm unlink && pnpm link --global",
    "build": "run-s build:*",
    "build:ts": "run-p build:ts:*",
    "build:ts:commonjs": "tsc -p tsconfig.json",
    "build:copy-package": "ts-node .scripts/copy-package.ts",
    "pack": "run-s pack:*",
    "pack:build": "pnpm run build",
    "pack:mkdir": "mkdir -p ./dist/pack",
    "pack:pack": "cd ./dist/main && pnpm pack --pack-destination ../pack",
    "release": "run-s release:*",
    "release:build": "pnpm run build",
    "release:publish": "pnpm publish ./dist/main --access public --publish-branch 'release/latest'",
    "npm:release": "run-s npm:release:*",
    "npm:release:publish": "pnpm publish ./dist/main --access public --publish-branch 'release/latest'",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "pre-commit": "echo pre-commit",
    "watch:build": "tsc -p tsconfig.json -w",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "start": "run-p start:*",
    "start:build": "pnpm run watch:build"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/ini": "^1.3.31",
    "@types/inquirer": "^8.2.2",
    "@types/lodash": "^4.14.182",
    "@types/unzipper": "^0.10.5",
    "@types/yargs": "^17.0.10",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "type-fest": "^2.18.0",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@cpdevtools/lib-node-utilities": "^0.4.2",
    "@types/node": "^18.6.1",
    "axios": "^0.27.2",
    "chalk": "^4.1.2",
    "cli-progress": "^3.11.2",
    "fast-glob": "^3.2.11",
    "ini": "^3.0.0",
    "inquirer": "^8.2.4",
    "linq": "^4.0.0",
    "lodash": "^4.17.21",
    "node-stream-zip": "^1.15.0",
    "rxjs": "^7.5.6",
    "strip-color": "^0.1.0",
    "tslib": "^2.4.0",
    "unzipper": "^0.10.11",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  }
}
